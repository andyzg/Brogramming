doctype html
html(lang="en")
  head
    title= pageTitle
    script(src='https://cdn.firebase.com/js/client/2.0.2/firebase.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/ace/1.1.3/ace.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/ace/1.1.3/mode-javascript.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/ace/1.1.3/theme-textmate.js')
    script(src='https://cdn.firebase.com/libs/firepad/1.1.0/firepad.min.js')
    script(src='lib/underscore.js')
    script(src='lib/pixi.dev.js')
    script(src='lib/modernizr.js')
    script(src='lib/jquery.min.js')
    script(src='lib/q.js')
    script(src='js/constants.js')
    script(src='js/util.js')
    script(src='js/block.js')
    script(src='js/parser.js')
    script(src='js/person.js')
    script(src='js/switch.js')
    script(src='js/map.js')
    script(src='js/renderer.js')
    script(src='js/controller.js')
    script(src='js/editor.js')
    script(src='js/script.js')
    link(rel='stylesheet', type='text/css', href='lib/bootstrap/bootstrap.min.css')
    link(rel='stylesheet', type='text/css', href='css/reset.css')
    link(rel='stylesheet', href='https://cdn.firebase.com/libs/firepad/1.1.0/firepad.css')
    link(rel='stylesheet', type='text/css', href='css/editor.css')
    link(rel='stylesheet', type='text/css', href='css/game.css')
  body
    div#box
      div#left
        div.cd-tabs.is-ended
          nav
            ul.cd-tabs-navigation
              li
                a.selected(href="#", data-content="Player 1") Player 1
              li
                a(href="#", data-content="Player 2") Player 2
        div.cd-tabs-content
          li.selected(data-content="Player 1")
            div#pad0
            textarea#console0.console(readonly)
          li(data-content="Player 2")
            div#pad1
            textarea#console1.console(readonly)
        div.buttons
          button#documentation.btn-primary.btn-sm.left(type='button')
            | Documentation
          button#evaluate.btn-primary.btn-sm.right(type='button')
            | Run
          button#stop.btn-primary.btn-sm.right(type='button')
            | Stop
          img#executing.spinner.right(src='img/ajax-loader.gif')
      div#right
        div#mapContainer
          div#map
